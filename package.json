{
  "name": "@thefolk/root",
  "private": true,
  "description": "The Folk Project - Modern Minimalist Website",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "clean": "turbo clean",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo build && changeset publish",
    "storybook": "turbo run storybook --filter @thefolk/storybook",
    "supabase:database:types": "supabase gen types typescript --linked > packages/utils/types/database.types.ts",
    "supabase:functions:deploy": "supabase functions deploy"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.4",
    "@turbo/gen": "^2.5.4",
    "prettier": "^3.5.3",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3"
  },
  "packageManager": "pnpm@10.11.1",
  "engines": {
    "node": ">=18"
  }
}
