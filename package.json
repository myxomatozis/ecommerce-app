{
  "name": "@thefolk/root",
  "version": "1.0.0",
  "private": true,
  "description": "The Folk - Modern ecommerce platform",
  "homepage": "https://thefolkproject.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourorg/thefolk.git"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --filter \"@thefolk/*\" dev",
    "dev:store": "pnpm --filter @thefolk/store dev",
    "dev:admin": "pnpm --filter @thefolk/admin dev",
    "dev:ui": "pnpm --filter @thefolk/ui dev",
    "build": "pnpm --filter \"@thefolk/*\" build",
    "build:store": "pnpm --filter @thefolk/store build",
    "build:admin": "pnpm --filter @thefolk/admin build",
    "build:ui": "pnpm --filter @thefolk/ui build",
    "lint": "pnpm --filter \"@thefolk/*\" lint",
    "type-check": "pnpm --filter \"@thefolk/*\" type-check",
    "preview": "pnpm --filter \"@thefolk/*\" preview",
    "clean": "pnpm --filter \"@thefolk/*\" clean",
    "clean:deps": "pnpm --filter \"@thefolk/*\" clean:deps && rm -rf node_modules",
    "reset": "pnpm clean:deps && pnpm install",
    "update:db-types": "supabase gen types typescript --linked > packages/database-types/index.ts"
  },
  "devDependencies": {
    "@types/node": "^22.15.30",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@10.12.1"
}
